all:
  hosts:
    ${host_name}:
      ansible_host: ${host_ip}
      ansible_user: ${ssh_user}
      ansible_become: ${ansible_become}
%{ if ssh_key_path != null ~}
      ansible_ssh_private_key_file: ${ssh_key_path}
%{ endif ~}

  children:
%{ for g in groups ~}
    ${g}:
      hosts:
        ${host_name}:
%{ endfor ~}
