    "git": "latest",
    "docker": "latest",
    "age": "latest"
  },
  "env": {
    "PROJECT_DIR": "$PWD",
    "SOPS_AGE_KEY_FILE": "$HOME/.config/sops/age/keys.txt",
    "SOPS_EDITOR": "code --wait"
  },
  "shell": {
    "init_hook": [
      "echo 'ðŸš€ homelab-seed Devbox ready â€” env loaded'",
      "alias tf='terraform -chdir=terraform'",
