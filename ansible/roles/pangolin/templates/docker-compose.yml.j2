# ~/veilgate-infra/services/pangolin/docker-compose.yml
services:
  pangolin:
    image: {{ pangolin_image }}
    container_name: pangolin
    restart: unless-stopped
    volumes:
      - ./config:/app/config
      - pangolin-data:/var/certificates
      - pangolin-data:/var/dynamic
    env_file:
      - ./.env
    environment:
      - PANGOLIN_SECRET=${PANGOLIN_SECRET}

    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/api/v1/"]
      interval: "3s"
      timeout: "3s"
      retries: 15

  gerbil:
    image: {{ gerbil_image }}
    container_name: gerbil
    restart: unless-stopped
    depends_on:
      pangolin:
        condition: service_healthy
    command:
      - --reachableAt=http://gerbil:3004
      - --generateAndSaveKeyTo=/var/config/key
      - --remoteConfig=http://pangolin:3001/api/v1/
      - --reportBandwidthTo=http://pangolin:3001/api/v1/gerbil/receive-bandwidth
      - --listen=:3004
      - --log-level=DEBUG
    volumes:
      - ./config:/var/config
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    ports:
      - 51820:51820/udp
      - 21820:21820/udp
      - 443:443
      - 80:80

  traefik:
    image: {{ traefik_image }}
    container_name: traefik
    restart: unless-stopped
    network_mode: service:gerbil
    depends_on:
      pangolin:
        condition: service_healthy
    command:
      - --configFile=/etc/traefik/traefik_config.yml
    env_file:
      - ./.env
    environment:
      - CF_DNS_API_TOKEN=${CF_API_TOKEN}
    volumes:
      # Static + dynamic config
      - ./config/traefik:/etc/traefik:ro
      # Letsencrypt
      - ./config/letsencrypt:/letsencrypt
      # Shared data (certs & dynamic config)
      - pangolin-data:/var/certificates:ro
      - pangolin-data:/var/dynamic:ro
      # Optional: docker.sock for container discovery
      - /var/run/docker.sock:/var/run/docker.sock:ro
      # Traefik logs (CrowdSec reads these)
      - ./config/traefik/logs:/var/log/traefik

  crowdsec:
    image: crowdsecurity/crowdsec:latest
    container_name: crowdsec
    restart: unless-stopped
    depends_on:
      - traefik
    environment:
      GID: "1000"
      COLLECTIONS: >
        crowdsecurity/traefik
        crowdsecurity/appsec-virtual-patching
        crowdsecurity/appsec-generic-rules
        crowdsecurity/linux      # system attacks
        crowdsecurity/sshd       # SSH
        crowdsecurity/iptables   # firewall
      ENROLL_KEY: ${CROWDSEC_ENROLL_KEY}
      ENROLL_INSTANCE_NAME: "{{ inventory_hostname }}-pangolin-crowdsec"
      PARSERS: crowdsecurity/whitelists
      ENROLL_TAGS: docker pangolin

    healthcheck:
      interval: 10s
      retries: 15
      timeout: 10s
      test: ["CMD", "cscli", "capi", "status"]

    volumes:
      - ./config/crowdsec:/etc/crowdsec
      - ./config/crowdsec/db:/var/lib/crowdsec/data
      - ./config/traefik/logs:/var/log/traefik:ro
      - /var/log/journal:/var/log/host:ro

networks:
  default:
    driver: bridge
    name: {{ pangolin_docker_network }}

volumes:
  pangolin-data:
